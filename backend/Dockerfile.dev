FROM node:18-alpine

WORKDIR /app

# Package files'ları kopyala
COPY package*.json ./

# Dependencies'leri yükle
RUN npm install

# nodemon'u global olarak yükle
RUN npm install -g nodemon

# Source kodunu kopyala
COPY . .

# Port'u expose et
EXPOSE 3002

# Development server'ı başlat
CMD ["npm", "run", "dev"]